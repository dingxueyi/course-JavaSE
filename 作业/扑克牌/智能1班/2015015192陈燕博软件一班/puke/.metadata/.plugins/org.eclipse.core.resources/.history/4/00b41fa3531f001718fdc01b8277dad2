package puke;

import java.util.ArrayList;
import java.util.Random;
public class play {

	public static void main(String[] args) {
		ArrayList list1=new ArrayList();
		for(int i=0;i<13;i++){
			list1.add(i,new puke("红桃",i+1));
		}
		for(int i=0;i<13;i++){
			list1.add(i+12,new puke("方片",i+1));
		}
		for(int i=0;i<13;i++){
			list1.add(i+24,new puke("梅花",i+1));
		}
		for(int i=0;i<13;i++){
			list1.add(i+36,new puke("黑桃",i+1));
		}
		list1.add(52,new puke("大王",99));
		list1.add(53,new puke("小王",100));
		player player1=new player("张三",1);
		player player2=new player("李四",2);
		player player3=new player("王五",3);
		Random r = new Random();
		for(int i=0;i<17;i++){
			int n=r.nextInt(53);
			player1.list.add(i,list1.get(n));
		}
	}

}
